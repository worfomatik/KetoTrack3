<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profileButton"
            android:layout_weight="0.166"
            android:onClick="profileView"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Food"
            android:id="@+id/enterFoodButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.166"
            android:onClick="enterFood"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Day"
            android:id="@+id/currentDayButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.166"
            android:onClick="viewCurrentDay"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Days"
            android:id="@+id/anotherDayButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.166"
            android:onClick="viewOtherDay"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food List"
            android:id="@+id/foodsButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.166"
            android:onClick="viewFoods"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:id="@+id/foodsButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.166"
            android:onClick="progress"
            android:background="@drawable/button"
            style="@style/ButtonFontSize"/>

    </LinearLayout>
</RelativeLayout>
